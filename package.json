{
  "name": "xpc-connect",
  "version": "0.0.0-semantically-released",
  "description": "XPC Connection binding for node.js",
  "main": "index.js",
  "gypfile": true,
  "files": [
    "binding.gyp",
    "build",
    "src",
    "README.md"
  ],
  "scripts": {
    "commit": "git-cz",
    "prebuild": "rimraf build",
    "build": "node-gyp rebuild",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "semantic-release": "semantic-release",
    "validate": "npm run test:coverage"
  },
  "jest": {
    "testURL": "http://localhost",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate",
      "prepare-commit-msg": "exec < /dev/tty && ./node_modules/.bin/git-cz --hook"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clobberos/xpc-connect.git"
  },
  "bugs": {
    "url": "https://github.com/clobberos/xpc-connect/issues"
  },
  "keywords": [
    "XPC",
    "XPC connect"
  ],
  "author": "Sandeep Misty <sandeep.mistry@gmail.com>",
  "maintainers": [
    {
      "name": "Jon Gear",
      "email": "jon@gear.dev",
      "url": "https://gear.dev"
    }
  ],
  "license": "MIT",
  "readmeFilename": "README.md",
  "engines": {
    "node": ">=18.0"
  },
  "os": [
    "darwin"
  ],
  "dependencies": {
    "bindings": "^1.5.0",
    "nan": "^2.22.0",
    "node-gyp": "^12.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "commitizen": "^4.3.0",
    "cosmiconfig": "^9.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "ghooks": "^2.0.4",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3"
  }
}
